<Window x:Class="WPFApp.EditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
       Title="Edit Dialog" Height="350" Width="450">
    <Grid>
        <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Room ID:" Width="120"/>
                <TextBox x:Name="txtRoomId" Width="200" IsReadOnly="True"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Room Number:" Width="120"/>
                <TextBox x:Name="txtRoomNumber" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Room Description:" Width="120"/>
                <TextBox x:Name="txtRoomDescription" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Max Capacity:" Width="120"/>
                <TextBox x:Name="txtRoomMaxCapacity" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Status:" Width="120"/>
                <TextBox x:Name="txtRoomStatus" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Price Per Date:" Width="120"/>
                <TextBox x:Name="txtRoomPricePerDate" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Room Type ID:" Width="120"/>
                <TextBox x:Name="txtRoomTypeId" Width="200"/>
            </StackPanel>
            <Button Content="Save" Width="75" Margin="5" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
