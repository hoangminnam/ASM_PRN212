<Window x:Class="WPFApp.CustomerEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="Edit Customer Dialog" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Customer ID:" Width="100"/>
                <TextBox x:Name="txtCustomerId" Width="200" IsReadOnly="True"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Customer Full Name:" Width="100"/>
                <TextBox x:Name="txtCustomerFullName" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Telephone:" Width="100"/>
                <TextBox x:Name="txtTelephone" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Email Address:" Width="100"/>
                <TextBox x:Name="txtEmailAddress" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Customer Status:" Width="100"/>
                <CheckBox x:Name="chkCustomerStatus" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Password:" Width="100"/>
                <PasswordBox x:Name="txtPassword" Width="200"/>
            </StackPanel>
            <Button Content="Save" Width="75" Margin="5" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
